{
    "manifest_version": 3,
    "name": "YouTube Premium Plus",
    "version": "1.0.0",
    "description": "Enhance YouTube UI and add features.",
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "icons": {
        "16": "src/assets/icon.svg",
        "48": "src/assets/icon.svg",
        "128": "src/assets/icon.svg"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "src/assets/icon.svg",
            "48": "src/assets/icon.svg",
            "128": "src/assets/icon.svg"
        }
    },
    "background": {
        "service_worker": "src/background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "css": [
                "src/content/styles.css"
            ],
            "run_at": "document_idle",
            "js": [
                "src/content/constants.js",
                "src/content/utils.js",
                "src/content/features/shared/theme.js",
                "src/content/features/layout/layout-manager.js",
                "src/content/features/home/home-organizer.js",
                "src/content/features/layout/header-nav.js",
                "src/content/features/subscriptions/subscription-manager.js",
                "src/content/features/subscriptions/subscriptions-ui.js",
                "src/content/features/subscriptions/index.js",
                "src/content/features/shared/content-control.js",
                "src/content/features/search/advanced-filter.js",
                "src/content/features/watch/zen-mode.js",
                "src/content/features/watch/focus-mode.js",
                "src/content/features/watch/study-mode.js",
                "src/content/features/watch/player.js",
                "src/content/features/home/shorts-tools.js",
                "src/content/features/watch/player-tools.js",
                "src/content/features/layout/sidebar.js",
                "src/content/features/search/search-redesign.js",
                "src/content/feature-manager.js",
                "src/content/features/watch-history.js",
                "src/content/features/ambient-mode/ambient-mode.js",
                "src/content/features/ambient-mode/audio-mode.js",
                "src/content/features/video-controls/video-controls.js",
                "src/content/features/history/history-tracker.js",
                "src/content/features/playlist/duration-calculator.js",
                "src/content/features/stats/stats-visualizer.js",
                "src/content/features/history/history-redesign.js",
                "src/content/features/playlist/playlist-redesign.js",
                "src/content/features/playlist/playlist-redesign.js",
                "src/content/features/data-api.js",
                "src/content/features/watch/return-dislike.js",
                "src/content/features/watch/mini-player.js",
                "src/content/features/watch/video-filters.js",
                "src/content/features/playlist/reverse-playlist.js",
                "src/content/main.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/*",
                "src/inject/*"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}